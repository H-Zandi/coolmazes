<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ImageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/stare5" />

    <ir.coolapps.coolmazes.CustomControls.NaskhTesxtView
        android:id="@+id/NaskhTesxtView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical|center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:gravity="right|center_horizontal"
        android:text="@string/comment"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <ir.coolapps.coolmazes.CustomControls.BkoodakTextView
        android:id="@+id/BkoodakTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/green_buttons"
        android:text="امتیاز می دهم"
        android:gravity="center_vertical|center"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ir.coolapps.coolmazes.CustomControls.BkoodakTextView
        android:id="@+id/BkoodakTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/red_buttons"
        android:text="خروج"
        android:gravity="center_vertical|center"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>
